<Window x:Class="Benner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Benner.ViewModels"
        Title="Sistema de Cadastro" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Background="#f5f5f5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Sistema de Cadastro" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <Button Content="Cadastro de Pessoas" Width="200" Height="40" Margin="0,5"
                    Command="{Binding AbrirPessoaCommand}"/>
            <Button Content="Cadastro de Produtos" Width="200" Height="40" Margin="0,5"
                    Command="{Binding AbrirProdutoCommand}"/>
            <Button Content="Cadastro de Pedidos" Width="200" Height="40" Margin="0,5"
                    Command="{Binding AbrirPedidoCommand}"/>
        </StackPanel>
    </Grid>
</Window>
